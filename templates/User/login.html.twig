{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
{% if app.user %}
    <h1 class="text-center m-5">Jesteś zalogowany</h1>
{% else %}
    <h1 class="text-center m-5">Logowanie</h1>
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
                {% if errors %}
                    <div class="alert alert-danger" role="alert">
                        {{ errors.messageKey }}
                    </div>
                {% endif %}
                    <form action="{{ path('login') }}" method="post" class="form-horizontal">
                        <label for="username">Login</label>
                        <input type="text" name="_username" id="username" value="{{ username }}" class="form-control">
                        <label for="password">Hasło</label>
                        <input type="password" name="_password" id="password" class="form-control">
                        <br>
                        <button type="submit" class="btn btn-primary">Login</button>
                    </form>
        </div>
    </div>
{% endif %}
</div>
{% endblock %}