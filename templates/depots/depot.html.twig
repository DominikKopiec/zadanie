{% extends 'base.html.twig' %}

{% block title %}Magazyn{% endblock %}

{% block body %}
<h1 class="text-center m-5">Magazyn</h1>
<div class="container-fluid pt-5">
    <a class="btn btn-primary" href="{{ path('addarticletodepot', {id: id}) }}" role="button">Przyjmij</a>
    <a class="btn btn-primary" href="{{ path('issuearticlefromdepot', {id: id}) }}" role="button">Wydaj</a>
    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-primary float-right" href="{{ path('addusertodepot', {id: id}) }}" role="button">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
            <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
            <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
            </svg>
        </a>
    {% endif %}
    <div class="row mt-3">
        <div class="col">
            <table class="table table-sm">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nazwa</th>
                    <th scope="col">Jednostka</th>
                    <th scope="col">Kod</th>
                    <th scope="col">Ilość</th>
                    <th scope="col">VAT</th>
                    <th scope="col">Cena</th>
                    <th scope="col">Plik</th>
                    </tr>
                </thead>
                <tbody>
                {% for status in status %}
                    <tr>
                    <th scope="row">{{ status.id }}</th>
                    <td>{{ status.article.name}}</td>
                    <td>{{ status.article.unit.name}}</td>
                    <td>{{ status.code}}</td>
                    <td>{{ status.value }}</td>
                    <td>{{ status.vat }}</td>
                    <td>{{ status.price }}</td>
                    <td>{{ status.file }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

