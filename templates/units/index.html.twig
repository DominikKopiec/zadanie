{% extends 'base.html.twig' %}

{% block title %}Jednostki{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center m-5">Jednostki</h1>
    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <h4>Dodaj nową:</h4>
            {% if form is defined %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
            {% endif %}
        </div>
        <div class="col-md-4">
            <table class="table table-sm">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Nazwa</th>
                <th scope="col">Skrót</th>
                </tr>
            </thead>
            <tbody>
            {% for unit in units %}
                <tr>
                <th scope="row">{{ unit.id }}</th>
                <td>{{ unit.name }}</td>
                <td>{{ unit.short }}</td>
                </tr>
                {% endfor %}
            </tbody>
            </table>
        </div>
    </div>


</div>

{% endblock %}
